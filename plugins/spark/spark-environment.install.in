source @INSTALL_DIR@/etc/init.d/hpcc_common
source @INSTALL_DIR@/etc/init.d/init-functions

installConfs ()
{
    fileName=$1
    configPath=$2
    mkdir -p @CONFIG_DIR@
    mkdir -p @CONFIG_DIR@/rpmnew

    printf "Installing %-44s ..." "${fileName}"

    if [ ! -e @CONFIG_DIR@/${fileName} ]; then
        # Always install new files without comment
        cp -f @INSTALL_DIR@/@CONFIG_DIR@/rpmnew/${fileName} @CONFIG_DIR@/${fileName}
        cp -f @INSTALL_DIR@/@CONFIG_DIR@/rpmnew/${fileName} @CONFIG_DIR@/rpmnew/${fileName}
        log_success_msg
    elif [ -e @CONFIG_DIR@/rpmnew/${fileName} ] && ! `diff -q @CONFIG_DIR@/rpmnew/${fileName} @INSTALL_DIR@/@CONFIG_DIR@/rpmnew/${fileName} >/dev/null` ; then
        # There are changes in the default config since last installed
        if ! `diff -q @CONFIG_DIR@/rpmnew/${fileName} @CONFIG_DIR@/${fileName} >/dev/null` ; then
            # User has made their own changes too, so don't overwrite
            log_failure_msg "Not overwriting modified configuration file ${fileName}"
        else
            # User has NOT made their own changes - ok to update
            cp -f @INSTALL_DIR@/@CONFIG_DIR@/rpmnew/${fileName} @CONFIG_DIR@/${fileName}
            cp -f @INSTALL_DIR@/@CONFIG_DIR@/rpmnew/${fileName} @CONFIG_DIR@/rpmnew/${fileName}
            log_success_msg "Updated configuration file ${fileName}"
        fi
    else
        log_success_msg "No changes to configuration file ${fileName}"
    fi
}

installConfs "spark-environment.xml" $configs/  1 || exit 1
